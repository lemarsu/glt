#!/usr/bin/env ruby
#

require 'rubygems'
require 'feedzirra'
require 'yaml'

class TorrentFormatter
  def initialize(feed_entry)
    @feed_entry = feed_entry
  end

  def title
    @feed_entry.title.gsub /[^\w-]+/, '_'
  end

  def file_name
    "#{title}.torrent"
  end

  def url
    @feed_entry.url
  end

  def excluded?
    title =~ /720p/
  end

  def download
    full_path = File.join(dir_path, file_name)
    download_to(url, full_path)
  end

  def dir_path
    $conf['global'] && $conf['global']['download_to'] || '.'
  end

  private

  def download_to(url, path, force = false)
    return if File.exists?(path) && !force
    puts "Downloading [#{url}] into [#{path}]"
    system 'wget', '-q', url, '-O', path
  end
end

CONF_PATH = [ENV['GLT_CONF_PATH'], 'glt.conf', "~/.glt.conf", "/etc/glt.conf"].find do |conf_path|
  conf_path && File.exists?(File.expand_path(conf_path.to_s))
end

unless CONF_PATH
  STDERR.puts "Can't find configuration path. aborting"
  exit 2
end

$conf = YAML.load_file(CONF_PATH)

feed_url = $conf["feeds"].first["url"]

feed = Feedzirra::Feed.fetch_and_parse feed_url

feed.entries.each do |entry|
  tf = TorrentFormatter.new entry
  tf.download unless tf.excluded?
end
